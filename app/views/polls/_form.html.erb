<%= form_with(model: @poll, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :question, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_field :question, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <h2 class="font-semibold text-lg mb-2">Options</h2>
  <div id="options" class="space-y-4 mb-4">
    <%= form.fields_for :options do |option_form| %>
      <div class="flex items-center space-x-4">
        <%= option_form.text_field :text, placeholder: "Option text", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        <%= button_tag "Remove", type: "button", class: "text-red-500 font-medium remove_option px-4 py-2 border border-red-500 rounded-lg hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-red-500" %>
        <%= option_form.hidden_field :_destroy %>
      </div>
    <% end %>
  </div>

  <button type="button" id="add_option" class="block text-indigo-500 font-medium mb-4 px-4 py-2 border border-indigo-500 rounded-lg hover:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-indigo-500">
    Add Option
  </button>

  <div class="flex justify-end space-x-4">
    <%= form.submit class: "px-5 py-3 bg-indigo-500 text-white rounded-lg hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
    <%= link_to "Back to polls", polls_path, class: "px-5 py-3 bg-gray-100 rounded-lg text-gray-700 font-medium" %>
  </div>
<% end %>
