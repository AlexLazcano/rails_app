<div class="w-full max-w-7xl mx-auto px-4 py-6">
  <% if notice.present? %>
    <div class="py-3 px-4 bg-green-100 text-green-800 font-medium rounded-lg mb-6" id="notice">
      <%= notice %>
    </div>
  <% end %>

  <%= content_for :title, "Polls" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-4xl font-bold text-gray-900">Polls</h1>
    <%= link_to "New Poll", new_poll_path, class: "inline-block px-6 py-3 bg-blue-600 text-white font-medium rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>

  <div id="polls" class="space-y-4">
    <% @polls.each do |poll| %>
      <div class="bg-white shadow-lg rounded-lg border border-gray-200 overflow-hidden">
        <div class="p-4">
          <h2 class="text-xl font-semibold text-gray-800"><%= poll.question %></h2>
          <p class="mt-2 text-gray-600"><%= truncate(poll.options.pluck(:text).join(', '), length: 100) %></p>
        </div>
        <div class="bg-gray-100 p-4 flex justify-between items-center">
          <%= link_to "Show", poll, class: "inline-block px-4 py-2 bg-gray-200 text-gray-800 font-medium rounded-lg shadow-sm hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50" %>
          <%= link_to "Edit", edit_poll_path(poll), class: "inline-block px-4 py-2 bg-blue-500 text-white font-medium rounded-lg shadow-sm hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
